    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:background="#68B53F"
        android:backgroundTint="#2196F3"
        android:backgroundTintMode="src_in"
        android:gravity="center"
        android:text="Who is the 44th president of the United States?"
        android:textSize="40sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="who is the 44th president of the United States?"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/flashcard_response"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="6dp"
        android:background="#FFEB3B"
        android:backgroundTint="#00BCD4"
        android:backgroundTintMode="src_in"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/flashcard_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Barack Obama
"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>